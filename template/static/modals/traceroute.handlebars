<div id="modal_discovery" uk-modal="center: true; esc-close: true; bg-close: false;">
	<div class="uk-modal-dialog">
		<button class="uk-modal-close-default" type="button" uk-close></button>
		<div class="uk-modal-header">
			<h2 class="uk-modal-title">Discover Available Nodes</h2>
		</div>
		<div class="uk-modal-body">
			<form>
				<div class="uk-margin">
					<label class="ul-dark"><input class="uk-radio j-discovery-radios" type="radio" name="radio1" value="0" checked/> IP with Start/End</label><br/>
					<label class="ul-dark"><input class="uk-radio j-discovery-radios" type="radio" name="radio1" value="1"/> IP and Subnet</label>
				</div>
				<div class="uk-margin uk-form-horizontal">
					<input class="uk-input uk-form-width-medium" type="text" name="first-input" value="192.168.1.1" id="disc_left_input"/>
					<span class="uk-label">-</span>
					<input class="uk-input uk-form-width-medium" type="text" name="second-input" value="192.168.1.255" id="disc_right_input"/>
				</div>
			</form>
		</div>
		<div class="uk-modal-footer uk-text-right">
			<button class="uk-button uk-button-default uk-modal-close uk-text-bold" type="button">Cancel</button>
			<button id="discovery_next" class="uk-button uk-button-primary uk-text-bold" type="button" disabled>Next</button>
		</div>
	</div>
</div>
