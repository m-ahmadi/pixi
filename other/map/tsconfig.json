{
  "compilerOptions": {
    "target": "es3",
    "module": "amd",
    "noImplicitAny": true,
    // "noEmitOnError": true,
    // "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
	  "baseUrl": "./ts/",
    "outDir": "./js/",
	  "typeRoots" : ["../../node_modules/@types", "./ts/typings"],
    "strict": true
  },
  "include": [
    "./ts/**/*"
  ],
  "exclude": [
    "node_modules",
	  "./js",
    "**/@*.ts"
  ]
}